{
    "postgres-connector": {
        "schema": {
            "title": "Connector Config",
            "type": "object",
            "properties": {
                "source": {
                    "title": "Storage Source",
                    "type": "object",
                    "properties": {
                        "database": {
                            "type": "object",
                            "title": "Database Information",
                            "fieldDescription": [
                                {
                                    "type": "string",
                                    "description": "Enter appropriate database information."
                                }
                            ],
                            "properties":{
                                "type": {
                                    "type": "string",
                                    "title": "Database Type",
                                    "default": "PostgreSQL"
                                },
                                "host": {
                                    "type": "string",
                                    "title": "Host",
                                    "pattern":"^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
                                },
                                "port": {
                                    "type": "number",
                                    "title": "Port",
                                    "minimum": 1,
                                    "maximum": 65535
                                },
                                "name": {
                                    "type": "string",
                                    "title": "Database Name",
                                    "pattern": "^[a-zA-Z0-9_]{1,64}$"
                                },
                                "username": {
                                    "type": "string",
                                    "title": "Database Username"
                                },
                                "password": {
                                    "type": "string",
                                    "title": "Database Password"
                                }
                            }
                        },
                        "table": {
                            "type": "string",
                            "title": "Table Name",
                            "pattern": "^[a-zA-Z_][a-zA-Z0-9_.]{0,62}$",
                            "fieldDescription": [
                                {
                                    "type": "string",
                                    "description": "It is recommended to create a new user and grant only SELECT permission on the table above."
                                }
                            ]
                        },
                        "timestamp-column": {
                            "type": "string",
                            "title": "Timestamp Column",
                            "fieldDescription": [
                                {
                                    "type": "string",
                                    "description": "The table needs to have a timestamp field. Periodically we will look for records updated/created based on the selected timestamp field and will sync them to our platform."
                                }
                            ]
                        }
                    }
                },
                "operations-config": {
                    "title": "Operations Configuration",
                    "type": "object",
                    "properties": {
                        "batch-size": {
                            "type": "number",
                            "title": "Batch Size",
                            "default": 100,
                            "fieldDescription": [
                                {
                                    "type": "string",
                                    "description": "Enter the number of batches."
                                }
                            ]
                        },
                        "max-batches": {
                            "type": "number",
                            "title": "Maximum Batches",
                            "default": 10,
                            "fieldDescription": [
                                {
                                    "type": "string",
                                    "description": "Enter the maximum number of batches."
                                }
                            ]
                        },
                        "polling-interval": {
                            "type": "string",
                            "title": "Polling Interval",
                            "enum": ["Once", "Periodic"],
                            "fieldDescription": [{
                                "type": "string",
                                "description": "Select polling interval"
                            }]
                        }
                    },
                    "dependencies": {
                        "polling-interval": {
                            "oneOf": [
                                {
                                    "properties": {
                                        "polling-interval": {
                                            "enum": [
                                                "Periodic"
                                            ]
                                        },
                                        "schedule": {
                                            "type": "string",
                                            "title": "Schedule",
                                            "enum": ["Hourly", "Daily", "Weekly", "Monthly"]
                                        }
                                    },
                                    "required": ["schedule"]
                                },
                                {
                                    "properties": {
                                        "polling-interval": {
                                            "enum": [
                                                "Once"
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "required": ["source", "operations-config"]
        },
        "properties": {
            "operations_config": {
                "batch_size": {
                    "ui:readonly": true
                },
                "max_batches": {
                    "ui:readonly": true
                }
            }
        }
    }
}